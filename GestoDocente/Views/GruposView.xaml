<Window x:Class="GestoDocente.Views.GruposView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GestoDocente.ViewModels"
        Title="Gestão de Grupos"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7"
        Opacity="0">

   

    <!-- Fade-in -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.4"
                                     AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <DockPanel Margin="15">
        <!-- Topo: Voltar ao Menu -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0 0 0 15">
            <Button Content="⮌ Voltar ao Menu"
                    Click="VoltarAoMenu_Click"
                    Style="{StaticResource CancelButton}"
                    Width="160" />
        </StackPanel>

        <!-- Corpo -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="2.3*" />
            </Grid.ColumnDefinitions>

            <!-- Grupos -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="📁 Grupos"
                           FontSize="18" FontWeight="Bold"
                           Foreground="#2C3E50" Margin="0 0 0 10"/>

                <Border Background="White" CornerRadius="8" BorderBrush="#D5DBDB" BorderThickness="1">
                    <ListBox ItemsSource="{Binding Grupos}"
                             SelectedItem="{Binding GrupoSelecionado}"
                             DisplayMemberPath="Nome"
                             Height="300"
                             Background="White"
                             Padding="5"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0 15 0 0" HorizontalAlignment="Left">
                    <Button Content="➕ Adicionar"
                            Command="{Binding AdicionarGrupoCommand}"
                            Style="{StaticResource ModernButton}"
                            Width="100" Margin="0,0,10,0"/>

                    <Button Content="🗑 Remover"
                            Command="{Binding RemoverGrupoCommand}"
                            Style="{StaticResource CancelButton}"
                            Width="100" Margin="0,0,10,0"/>

                    <Button Content="✏ Editar Nome"
                            Command="{Binding EditarGrupoCommand}"
                            Style="{StaticResource ModernButton}"
                            Width="110"/>
                </StackPanel>
            </StackPanel>

            <!-- Alunos no grupo -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="👥 Alunos do Grupo"
                           FontSize="18" FontWeight="Bold"
                           Foreground="#2C3E50" Margin="0 0 0 10"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#D5DBDB" BorderThickness="1">
                    <ListBox ItemsSource="{Binding GrupoSelecionado.Alunos}"
                             SelectedItem="{Binding AlunoGrupoSelecionado}"
                             DisplayMemberPath="Nome"
                             Height="300"
                             Background="White"
                             Padding="5"/>
                </Border>
            </StackPanel>

            <!-- Pesquisa e Atribuição -->
            <StackPanel Grid.Column="2" Margin="20,0,0,0">
                <TextBlock Text="🔍 Pesquisar Aluno"
                           FontSize="18" FontWeight="Bold"
                           Foreground="#2C3E50" Margin="0 0 0 10"/>

                <TextBox Text="{Binding FiltroAluno, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource RoundedTextBox}"
                         Margin="0,0,0,10"/>

                <Border Background="White" CornerRadius="8" BorderBrush="#D5DBDB" BorderThickness="1">
                    <ListBox ItemsSource="{Binding AlunosFiltrados}"
                             SelectedItem="{Binding AlunoSelecionado}"
                             DisplayMemberPath="Nome"
                             Height="200"
                             Background="White"
                             Padding="5"/>
                </Border>

                <Button Content="➕ Atribuir Aluno"
                        Command="{Binding AtribuirAlunoCommand}"
                        Style="{StaticResource ModernButton}"
                        Width="160" Margin="0,15,0,0"/>

                <Button Content="➖ Remover Aluno"
                        Command="{Binding RemoverAlunoGrupoCommand}"
                        Style="{StaticResource CancelButton}"
                        Width="160" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
