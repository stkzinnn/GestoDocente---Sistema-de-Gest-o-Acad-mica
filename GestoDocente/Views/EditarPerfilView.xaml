<Window x:Class="GestoDocente.Views.EditarPerfilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GestoDocente.ViewModels"
        Title="Editar Perfil" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        AllowsTransparency="False"
        WindowStyle="SingleBorderWindow"
        Opacity="0">

    <Window.DataContext>
        <vm:EditarPerfilViewModel />
    </Window.DataContext>

    <!-- Fade-in -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.4"
                                     AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDE2E6" BorderThickness="1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="👤 Editar Perfil" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" Margin="0 0 0 20"/>

            <Image Source="{Binding CaminhoFoto}" Width="100" Height="100" Margin="0 0 0 10"/>
            <Button Content="📷 Escolher Foto"
                    Command="{Binding EscolherFotoCommand}"
                    Style="{StaticResource ModernButton}"
                    Width="160" Margin="0 0 0 20"/>

            <TextBlock Text="Nome:" Style="{StaticResource FormLabel}"/>
            <TextBox Text="{Binding Nome}" Width="250" Style="{StaticResource RoundedTextBox}" Margin="0 0 0 20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="💾 Guardar"
                        Command="{Binding GuardarCommand}"
                        Style="{StaticResource ModernButton}" Width="110" Margin="5"/>
                <Button Content="🔙 Voltar ao Menu"
                        Click="VoltarAoMenu_Click"
                        Style="{StaticResource CancelButton}" Width="130" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
