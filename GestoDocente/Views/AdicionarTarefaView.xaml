<Window x:Class="GestoDocente.Views.AdicionarTarefaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adicionar Tarefa"
        Height="460" Width="460"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        AllowsTransparency="False"
        WindowStyle="SingleBorderWindow"
        Opacity="0">

    <!-- Fade-in -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.4"
                                     AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#DDE2E6" BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="📝 Nova Tarefa"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Formulário -->
            <StackPanel Grid.Row="1" Margin="10,0">
                <TextBlock Text="Título:" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Titulo}" Style="{StaticResource RoundedTextBox}"/>

                <TextBlock Text="Descrição:" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Descricao}" Style="{StaticResource RoundedTextBox}"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="📅 Início:" Style="{StaticResource FormLabel}"/>
                        <DatePicker SelectedDate="{Binding DataInicio}" Height="32"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="📆 Término:" Style="{StaticResource FormLabel}"/>
                        <DatePicker SelectedDate="{Binding DataTermino}" Height="32"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="⚖️ Peso (%):" Style="{StaticResource FormLabel}"/>
                <TextBox Text="{Binding Peso}" Style="{StaticResource RoundedTextBox}"/>
            </StackPanel>

            <!-- Botões -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="💾 Guardar"
                        Click="Guardar_Click"
                        Width="110" Height="38"
                        Style="{StaticResource ModernButton}"
                        Margin="5"/>

                <Button Content="❌ Cancelar"
                        Click="Cancelar_Click"
                        Width="110" Height="38"
                        Style="{StaticResource CancelButton}"
                        Margin="5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
