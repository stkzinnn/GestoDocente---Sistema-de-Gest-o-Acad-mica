<Window x:Class="GestoDocente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GestoDocente.ViewModels"
        Title="GestoDocente - Menu Principal"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1"
        FontFamily="Segoe UI"
        Opacity="0">

    <!-- Fade-in -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.4"
                                     AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Estilo Botões Menu -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1ABC9C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- MENU LATERAL -->
        <Border Background="#2C3E50" Padding="20" Width="240" DockPanel.Dock="Left">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <!-- Perfil -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                    <Ellipse Width="40" Height="40" Stroke="White" StrokeThickness="1">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding Perfil.CaminhoFoto}" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding Perfil.Nome}" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Botões -->
                <Button Content="👨‍🎓  Gerir Alunos" Command="{Binding AbrirAlunosCommand}" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="👥  Gerir Grupos" Command="{Binding AbrirGruposCommand}" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="📝  Gerir Tarefas" Command="{Binding AbrirTarefasCommand}" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="✅  Atribuir Notas" Command="{Binding AbrirNotasCommand}" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="📊  Gráficos/Notas" Command="{Binding AbrirVisualizarNotasCommand}" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="📄  Pauta Final" Command="{Binding AbrirPautaCommand}" Style="{StaticResource MenuButtonStyle}" />
                <Button Content="⚙️  Gerir Perfil" Command="{Binding AbrirGerirPerfilCommand}" Style="{StaticResource MenuButtonStyle}" />
            </StackPanel>
        </Border>

        <!-- CONTEÚDO PRINCIPAL -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                <TextBlock Text="📚 Próximas Tarefas"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,20" />

                <ItemsControl ItemsSource="{Binding TarefasPreview}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="10"
                                    Padding="15"
                                    Margin="0,0,0,15"
                                    BorderBrush="#DDD"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" />
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="{Binding Titulo}"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               Foreground="#2C3E50"/>
                                    <TextBlock Text="{Binding DataTermino, StringFormat='🕓 Termina em: {0:dd/MM/yyyy}'}"
                                               FontSize="12"
                                               Foreground="#555"/>
                                    <TextBlock Text="{Binding Peso, StringFormat='🎯 Peso: {0}%'}"
                                               FontSize="12"
                                               Foreground="#555"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
